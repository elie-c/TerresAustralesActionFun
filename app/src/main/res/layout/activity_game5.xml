<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Game5Activity">

    <!-- Boutons pour choisir l'outil -->
    <Button
        android:id="@+id/aspirateurButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aspirateur"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/brosseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brosse"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"/>

    <!-- Affichage de l'outil sélectionné -->
    <ImageView
        android:id="@+id/selectedToolImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"/>

</RelativeLayout>
